### DOCKER COMPOSE ############################################################
### Sets the project name. Define the prefix of container names
COMPOSE_PROJECT_NAME={{COMPOSE_PROJECT_NAME}}

### Lets you specify which environment files Compose should use
### if --env-file isn't used
COMPOSE_ENV_FILES={{COMPOSE_ENV_FILES}}

### Specifies the path to a Compose file
COMPOSE_FILE=docker-compose.yml
# Change the separator from : to ; on Windows
COMPOSE_PATH_SEPARATOR=:

COMMON_CONTAINER_LOG_MAX_SIZE=50m

### DRIVERS ###################################################################
# All volumes driver
VOLUMES_DRIVER=local
# All Networks driver
NETWORKS_DRIVER=bridge

### PROJECT SETTINGS ######################################
APP_FQDN=localhost.loc
# APP_NAME=localhost
APP_BASE_URL=localhost.loc
# Point to where the `APP_CODE_PATH_HOST` should be at host
APP_CODE_PATH_HOST=../
# Point to where the `APP_CODE_PATH_HOST` should be in the container
APP_CODE_PATH=/var/www
# You may add flags to the path `:cached`, `:delegated`. When using Docker Sync add `:nocopy`
APP_CODE_CONTAINER_FLAG=:cached
# Choose storage path on your machine. For all storage systems
APP_DATA_PATH_HOST=../data
APP_CONFIG_PATH_HOST=../config
APP_LOG_PATH_HOST=../logging
APP_SCRIPT_PATH_HOST=../scripts
APP_PROVIDER_PATH_HOST=../provider
APP_SRC_PATH_HOST=../application

# Enter your Docker Host IP (will be appended to /etc/hosts)
# Default is `10.0.75.1`
DOCKER_HOST_IP=10.0.75.1
